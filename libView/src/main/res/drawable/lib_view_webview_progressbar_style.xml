<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0dp" />
            <gradient
                android:angle="0"
                android:centerColor="#e0e0ee"
                android:centerY="1"
                android:endColor="#e0e0ee"
                android:startColor="#e0e0ee" />
        </shape>
    </item>


    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0dp" />
                <gradient
                    android:angle="0"
                    android:centerColor="@color/lib_view_theme_color"
                    android:endColor="@color/lib_view_theme_color"
                    android:startColor="@color/lib_view_theme_color" />
            </shape>
        </clip>
    </item>
</layer-list>

